<div id="loading-screen" class="loading-screen">
    <div class="loader-half left"></div>
    <div class="loader-half right"></div>
</div>

<style>
    .loading-screen {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 9999;
        background-color: rgba(23, 22, 22, 0.63);
        overflow: hidden;

        @media (max-width: 780px) {
            overflow: visible;
        }

    }

    .loader-half {
        position: absolute;
        width: 50%;
        height: 100%;
        background-color: #f1f1f1;
        transition: transform 1s ease-in-out;
    }

    .left {
        left: 0;
        transform: translateX(0);
        background-color: #7C7C7C;
        opacity: .7;
    }

    .right {
        right: 0;
        transform: translateX(0);
        background-color: #333333;
        opacity: .7;
    }

    @keyframes slideOut {
        0% { transform: translateX(0); }
        100% { transform: translateX(-100%); }
    }

    @keyframes slideIn {
        0% { transform: translateX(0); }
        100% { transform: translateX(100%); }
    }

    @keyframes fadeOut {
        0% { opacity: 1; }
        100% { opacity: 0; }
    }

    .loading-screen {
        animation:
                fadeOut 1s ease-in-out 2s forwards,
                hideLoader 0s ease-in 3s forwards;
    }

    .loading-screen .left {
        animation: slideOut 1s ease-in-out 1s forwards;
    }

    .loading-screen .right {
        animation: slideIn 1s ease-in-out 1s forwards;
    }

    @keyframes hideLoader {
        to { visibility: hidden; }
    }
</style>
