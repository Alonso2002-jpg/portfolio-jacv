---
import { HiArrowTurnUpLeft } from "react-icons/hi2"
import {useTranslations} from "../i18n/utils";
import {languageList} from "../i18n/ui";
import SectionItem from "./SectionItem.astro";
const { src, alt } = Astro.props
const currentLang = Astro.currentLocale || "es"
const t = useTranslations(currentLang as keyof typeof languageList)
---
<div class="main-container">
    <div class="container">
        <img src={src} alt={alt}/>
        <div class="arrow-text">
            <HiArrowTurnUpLeft size={25} color="#3A4852"/>
            <span>{t('itsMe')} ðŸ‘€</span>
        </div>
    </div>
    <div class="working-text">
        <SectionItem title={"Actualmente en"} description={""} withDesc={false} text={""} />
    </div>
</div>
<style>
    .main-container{
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .working-text{
        width: 35%;
    }
    .container{
        display: flex;
        align-items: center;
        gap: 2rem;
    }
    .arrow-text{
        display: flex;
        flex-direction: column;
        gap: .5rem;
    }
    img{
        border-radius: 100%;
        height: 8rem;
        width: 8rem;
        transition: transform 0.5s ease-in-out;
    }

    img:hover{
        transform: scale(1.2);
    }
    span{
        color: #3A4852;
        font-weight: bold;
    }
</style>