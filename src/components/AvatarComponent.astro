---
import { HiArrowTurnUpLeft, HiArrowUp } from "react-icons/hi2"
import {useTranslations} from "../i18n/utils";
import {languageList} from "../i18n/ui";
import SectionItem from "./SectionItem.astro";
const { src, alt } = Astro.props
const currentLang = Astro.currentLocale || "es"
const t = useTranslations(currentLang as keyof typeof languageList)

---
<div class="main-container">
    <div class="container">
        <img src={src} alt={alt}/>
        <div class="arrow-text">
            <text class="arrow-left-up"><HiArrowTurnUpLeft size={25} color="#3A4852"/></text>
            <text class="arrow-up"><HiArrowUp size={13} color="#3A4852"/></text>
            <span>{t('itsMe')} ðŸ‘€</span>
        </div>
    </div>
    <div class="working-text">
        <SectionItem title={t('actuallyOn')} description={""} withDesc={false} text={""} />
    </div>
</div>
<style>
    .main-container{
        display: flex;
        justify-content: space-between;
        align-items: center;
        @media (max-width: 780px) {
            flex-direction: column;
            justify-content: center;
            gap: 1rem;
        }
    }

    .arrow-left-up{
        @media (max-width: 780px) {
            display: none;
        }
    }

    .arrow-up{
        display: none;
        @media (max-width: 780px) {
           display: block;
        }
    }
    .working-text{
        width: 35%;
        @media (max-width: 780px) {
            width: 60%;
        }
    }
    .container{
        display: flex;
        align-items: center;
        gap: 2rem;
        @media (max-width: 780px) {
            flex-direction: column;
            justify-content: center;
            gap: .5rem;
        }
    }
    .arrow-text{
        display: flex;
        flex-direction: column;
        gap: .5rem;
        @media (max-width: 780px) {
            align-items: center;
            gap: .3rem;
        }
    }
    img{
        border-radius: 100%;
        height: 8rem;
        width: 8rem;
        transition: transform 0.5s ease-in-out;
        @media (max-width: 780px) {
            height: 4rem;
            width: 4rem;
        }
    }

    img:hover{
        transform: scale(1.2);
    }
    span{
        color: #3A4852;
        font-weight: bold;
        @media (max-width: 780px) {
            font-size: .7rem;
        }
    }
</style>