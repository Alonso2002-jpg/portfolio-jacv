---
const {src, alt, text} = Astro.props;
---
<a class="img-text-container" href="https://www.originpath.com/" target="_blank">
    <img src={src} alt={alt}/>
    <span class="text-underline">{text}</span>
</a>

<style>
    a {
        text-decoration: none;
    }
    .img-text-container {
        display: flex;
        align-items: center;
        gap: 0.3rem;
        color: #7e8a45;
        font-weight: bold;
        opacity: 0.5;
        transition: opacity 0.3s ease-in-out, color 0.3s ease-in-out;
        cursor: pointer;
        @media (max-width: 780px) {
            font-size: .65rem;
        }
    }

    .img-text-container:hover {
        opacity: 1;
        color: #A9C439;
    }

    .text-underline {
        position: relative;
    }

    .text-underline::after {
        content: '';
        position: absolute;
        width: 0;
        height: 2px;
        bottom: -2px;
        left: 0;
        background-color: #A9C439;
        transition: width .8s ease;
    }

    .img-text-container:hover .text-underline::after {
        width: 100%;
    }

    img {
        width: 8%;
        height: 8%;
        border-radius: 100%;
    }
</style>
