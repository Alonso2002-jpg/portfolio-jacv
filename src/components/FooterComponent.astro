---
import {HiArrowUp} from "react-icons/hi2";
import {FaGithub, FaLinkedin, FaFacebook} from "react-icons/fa";
import {FaSquareXTwitter} from "react-icons/fa6";
import {useTranslations} from "../i18n/utils";
import {languageList} from "../i18n/ui";
const currentLang = Astro.currentLocale || "es"
const t = useTranslations(currentLang as keyof typeof languageList)
---
<div class="footer-container">
    <div class="return-container" onclick="window.scrollTo({top: 0, behavior: 'smooth'})">
        <HiArrowUp size="25" color="#F1F1F1"/>
        <span class="vistazo-text">{t('lookup')}</span>
    </div>
    <div class="info-container">
        <div class="data-info-container">
            <span class="goodbye-text">{t('goodbye1')}...<span class="underline-text">{t('goodbye2')}</span>.üßê</span>
            <span class="seemore-text">{t('meetme1')} <a href="https://github.com/Alonso2002-jpg" target="_blank">GitHub</a> {t('meetme2')} <a href="https://www.linkedin.com/in/jorge-alonso-cruz" target="_blank">Linkedin</a></span>
            <div class="social-container">
                <ul>
                    <li>
                        <a href="https://github.com/Alonso2002-jpg" target="_blank"><FaGithub size="25"/></a>
                    </li>
                    <li>
                        <a href="https://www.linkedin.com/in/jorge-alonso-cruz" target="_blank"><FaLinkedin size="25"/></a>
                    </li>
                    <li>
                        <a href="https://x.com/Alonshi2002" target="_blank"><FaSquareXTwitter size="25"/></a>
                    </li>
                    <li>
                        <a href="https://www.facebook.com/toyito.totoro.love" target="_blank"><FaFacebook size="25"/></a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Albert+Sans:ital,wght@0,300;1,300&family=Poiret+One&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=KoHo:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;1,200;1,300;1,400;1,500;1,600;1,700&display=swap');
    .footer-container {
        font-family: "Albert Sans", serif;
        font-optical-sizing: auto;
        font-weight: lighter;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 50%;
        width: 100%;
        z-index: 1;
        color: #F1F1F1;
        @media (max-width: 780px) {
            flex-direction: column;
        }
    }

    .return-container {
        width: 50%;
        height: 100%;
        display: flex;
        flex-direction: column;
        font-size: .6rem;
        gap: 2rem;
        border-right: 1px rgba(131, 130, 130, 0.2) solid;
        align-items: center;
        justify-content: center;
        opacity: .4;
        transition: opacity .4s ease-in-out, background-color .4s ease-in-out;
        color: #F1F1F1;
        cursor: pointer;
        @media (max-width: 780px) {
           width: 100%;
            border-bottom: 1px rgba(131, 130, 130, 0.2) solid;
        }
    }

    .return-container:hover {
        background-color: #2c2b2b;
        opacity: 1;
    }

    .return-container:hover .vistazo-text {
        color: #F1F1F1;
    }

    .vistazo-text {
        position: relative;
        padding: 5px 10px;
        color: transparent;
        transition: color .4s ease-in-out;
        font-size: 2em;
    }

    .vistazo-text::before,
    .vistazo-text::after {
        content: '';
        position: absolute;
        width: 0;
        height: 0;
        opacity: 0;
        transition: width 0.3s, height 0.3s, opacity 0.3s;
    }

    .vistazo-text::before {
        top: 0;
        left: 0;
        border-top: 2px solid #F1F1F1;
        border-left: 1px solid #F1F1F1;
    }

    .vistazo-text::after {
        bottom: 0;
        right: 0;
        border-bottom: 2px solid #F1F1F1;
        border-right: 1px solid #F1F1F1;
    }

    .return-container:hover .vistazo-text::before,
    .return-container:hover .vistazo-text::after {
        width: 100%;
        height: 100%;
        opacity: 1;
    }

    .info-container {
        width: 50%;
        @media (max-width: 780px) {
            width: 100%;
            padding: 2rem 0;
        }
    }

    .data-info-container{
        display: flex;
        flex-direction: column;
        text-align: end;
        gap: 6rem;
        font-size: .9rem;
        margin-right: 6rem;
        @media (max-width: 780px) {
            width: 100%;
            justify-content: center;
            text-align: center  ;
        }
    }
    .info-container .goodbye-text {
        letter-spacing: .05rem;
        font-family: "KoHo", serif;
        font-weight: 300;
    }

    .info-container .seemore-text a {
        text-decoration: none;
        color: #F1F1F1;
        border-bottom: 2px solid #F1F1F1;
    }
    .info-container .social-container{
        @media (max-width: 780px) {
            margin: auto;
            width: 100%;
        }
    }
    .info-container .social-container ul {
        display: flex;
        justify-content: end;
        align-items: center;
        gap: 2.3rem;
        list-style: none;
        @media (max-width: 780px) {
            justify-content: center;
        }
    }
    .info-container .social-container ul li a {
        text-decoration: none;
        color: #F1F1F1;
    }

    .underline-text{
        text-decoration: underline;
    }
</style>
