---
import WelcomeText from "./WelcomeText.astro";
---
<div class="background-text-container">
    <div class="content">
        <WelcomeText text={"Alonso Cruz"}></WelcomeText>
        <WelcomeText text={"Full Stack Developer"}></WelcomeText>
    </div>
</div>

<style>
    .background-text-container {
        position: relative;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }

    .content {
        position: relative;
        z-index: 3;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap:.4rem;
        width: 100%;
        height: 100%;
    }

    .background-text-container::before {
        content: "Hello";
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-family: 'Arial', sans-serif;
        font-size: 46rem;
        font-weight: bold;
        color: rgba(122, 122, 122, 0.3);
        white-space: nowrap;
        text-shadow: 5px 20px 10px rgba(0, 0, 0, 0.2);
        z-index: 1;
    }


</style>
