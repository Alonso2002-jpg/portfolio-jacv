---
const { projectTextProps, positionShape } = Astro.props;
console.log(positionShape)
---

<div class="container">
    <div class="text">
        <h2 class="title">{projectTextProps.title}</h2>
        <span>{projectTextProps.techstach}</span>
        <span>{projectTextProps.description}</span>
    </div>
    <img src={projectTextProps.shape} alt="shape">
</div>
<style>
    @import url('https://fonts.googleapis.com/css2?family=Albert+Sans:ital,wght@0,300;1,300&family=Poiret+One&display=swap');

    img{
        @media (max-width: 780px) {
            width: 30%;
        }
    }
    .container {
        position: relative;
        width: 100%;
        height: 100%;
        display: flex;
        gap: .6rem;
        font-family: "Albert Sans", serif;
        font-optical-sizing: auto;
        font-weight: 200;
        justify-content: center;
        align-items: center;
        color: #a9a9a9;
        background: #f1f1f1;
        overflow: hidden;
        @media (max-width: 780px) {
            flex-direction: column;
            gap: 2rem;
        }
    }

    .text {
        position: relative;
        z-index: 2;
        display: flex;
        flex-direction: column;
        align-items: start;
        width: 50%;
        gap: 1rem;
        letter-spacing: .1em;
        @media (max-width: 780px) {
            width: 90%;
        }
    }

    .title {
        font-size: 1rem;
        font-weight: bold;
        color: #3a3a3a;
        position: relative;
        display: inline-block;
        @media (max-width: 780px) {
            font-size: .6rem;
        }
    }

    .title::after {
        content: '';
        position: absolute;
        width: 0;
        height: 1px;
        bottom: 0;
        left: 0;
        background-color: #3a3a3a;
        transition: width 1.3s ease;
    }

    .container:hover .title::after {
        width: 100%;
    }

    span {
        font-size: .8rem;
        width: 80%;
        @media (max-width: 780px) {
            font-size: .6rem;
        }
    }
</style>
